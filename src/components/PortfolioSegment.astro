---
const { url, title, animDelay, desc, tech, img } = Astro.props;
---

<div
  class={"portfolioSegment"}
  style={{ animationDelay: `${(animDelay + 1) / 3}s` }}
  onclick={"window.open('"+url+"', '_blank')"}
>
  <img src={img} alt={title+" image"} />
  <h6><a href={url} target="_blank">{title}</a></h6>
  <p>{desc}</p>
  <div>
    {tech.map((v, i) => <img src={`tech-icons/${v}.svg`} alt={v} />)}
  </div>
</div>
